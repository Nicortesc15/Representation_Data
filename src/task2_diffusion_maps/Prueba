import numpy as np
import matplotlib.pyplot as plt
import utils
# TODO: Create a periodic dataset with the details described in the task-sheet
N = 1000  #number of points of the dataset
t_k = (2 * np.pi / (N + 1)) * np.arange(1, N + 1)
dataset = np.column_stack((np.cos(t_k), np.sin(t_k)))
print (dataset)
# TODO: Visualize data-set
plt.plot(dataset[:,0], dataset[:,1])
plt.title('Periodic dataset')
plt.show()

num_harmonics = 2  

# Plot  basis functions

for n in range(1, num_harmonics + 1):
    plt.plot(t_k, np.cos(n * t_k), label=f"cos({n}t_k)")    #cos component
    plt.plot(t_k, np.sin(n * t_k), label=f"sin({n}t_k)")    #sin component

# Add labels and legend
plt.title("Sine and Cosine Basis Functions of the Dataset")
plt.xlabel("t_k")
plt.ylabel("Amplitude")
plt.legend()
plt.grid()
plt.show()